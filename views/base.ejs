<html>
<head>
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=no">

	<meta name="description" content="Искусство продвижения кино. Видеоролики, видео, съемка, фильмы.">
	<meta name="keywords" content="Искусство, продвижения, кино, видеоролики, видео, съемка, фильмы, продюсер, реклама">
	<meta name="robots" content="ALL">

	<link rel="stylesheet" type="text/css" href="/libs/bootstrap/css/bootstrap.css">
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,800,600&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="/libs/font-awesome-4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" href="/libs/animate.css/animate.min.css">
	<script type="text/javascript" src="/libs/jquery.js"></script>
	<script type="text/javascript" src="/libs/bootstrap/js/bootstrap.min.js"></script>
	<script type="text/javascript" src='/libs/angular.js'></script>
	<script type="text/javascript" src="/libs/angular-animate.min.js"></script>

	<script type="text/javascript">
		app = angular.module('app', ['ngAnimate']);

		app.filter('cut', function () {
            return function (value, wordwise, max, tail) {
                if (!value) return '';

                max = parseInt(max, 10);
                if (!max) return value;
                if (value.length <= max) return value;

                value = value.substr(0, max);
                if (wordwise) {
                    var lastspace = value.lastIndexOf(' ');
                    if (lastspace != -1) {
                        value = value.substr(0, lastspace);
                    }
                }

                return value + (tail || ' …');
            };
        });
	</script>	

	<meta charset="utf-8">
	<%-blocks.title%>
</head>
<body ng-app="app">
	<div class="container clearfix">
	
	<%- partial('header') %>
	<%- body %>

	</div>
	<script src="/libs/scrollReveal.js/dist/scrollReveal.js"></script>
	<script>
		window.scrollReveal = new scrollReveal();
	</script>

	<style>
	[ng-click] {
		cursor: pointer;
	}
	</style>
</body>
</html>